{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">

        <h1>Modification de profile</h1>

        {{ form_start(form) }}

        <div class="row">
            <div class="col">
                <div class="alert alert-light">
                   <h2 class="alert-heading">Informations générales</h2>
                    {{ form_row(form.lastName)}}
                    {{ form_row(form.firstName)}}
                    {{ form_row(form.email)}}
                    {{ form_row(form.picture)}}
                </div>
            </div>
            <div class="col">
                <div class="alert alert-light">
                    <h2 class="alert-heading">Détailes</h2>
                    {{ form_row(form.introduction)}}
                    {{ form_row(form.description)}}
                </div>
                    <p>Si vous avez terminé vos modifications, vous pouvez les sauvegarder</p>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-check"></i> Enregistrer les modifications
                    </button>
            </div>
                
        </div>        
         
        {{ form_end(form) }}

    </div>

{% endblock %}