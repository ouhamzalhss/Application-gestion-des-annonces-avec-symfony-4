{% extends 'admin/base.html.twig' %}

{% block title %}Administration des réservations!{% endblock %}

{% block body %}
    <div class="container-fluid">
      <h2 class="my-5">Administration des réservations! </h2>
        <table class="table table-hover">
             <thead>
                 <tr>
                    <th>Annonce</th>
                    <th>Author</th>
                    <th>Date d'arrivée</th>
                    <th>Date de départ</th>
                    <th>Prix</th>
                    <th>Actions</th>
                 </tr>
             </thead>
             <tbody>
                {% for booking in paginator.data %}
                 <tr>
                    <td nowrap="">{{ booking.ad.title }}</td>
                    <td nowrap="">
                    <img src="{{ booking.booker.picture }}" alt="avatar de {{ booking.booker.fullName }}" class="avatar avatar-micro mr-2">
                        {{ booking.booker.fullName }}
                    </td>
                    <td>{{ booking.startDate | date('d/m/Y H:i') }}</td>
                    <td>{{ booking.endDate | date('d/m/Y H:i') }}</td>
                    <td>{{ booking.amount | number_format(2,',',' ') }}</td>
                    <td nowrap="">
                        <a href="{{path('admin_booking_edit',{'id':booking.id})}}" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                        <a href="{{path('admin_booking_delete',{'id':booking.id})}}" class="btn btn-danger" onclick=" return confirm('étes vous sûr de supprimer ce commentaire')"><i class="fas fa-trash"></i></a>
                    </td>
                 </tr>
                {% endfor %}
             </tbody>
        </table>
       
       {{ paginator.display }}
        
    </div>

{% endblock %}


